<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/theme_paddig"
    tools:context=".ui.penghuni.C_Penghuni">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/theme_paddig">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/top_padding"
        android:text="Tambah Penghuni"
        android:textSize="@dimen/judul"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/tv"
        android:textStyle="bold"
        android:text="ID" />

    <TextView
        android:id="@+id/etid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="100"
        android:textSize="@dimen/et"
        android:paddingBottom="@dimen/bottom_padding"
        android:inputType="text"/>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/tv"
        android:textStyle="bold"
        android:text="Nama" />

    <EditText
        android:id="@+id/et1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="100"
        android:textSize="@dimen/et"
        android:paddingBottom="@dimen/bottom_padding"
        android:inputType="text"/>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/tv"
        android:textStyle="bold"
        android:text="Jenis Kelamin" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/bottom_padding"
        android:id="@+id/radiogrup"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/b_laki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laki-Laki"
            android:textSize="@dimen/tv"/>

        <RadioButton
            android:id="@+id/b_perempuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_padding"
            android:text="Perempuan"
            android:textSize="@dimen/tv"/>
    </RadioGroup>

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/tv"
        android:textStyle="bold"
        android:text="Asal" />

    <EditText
        android:id="@+id/et3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="200"
        android:textSize="@dimen/et"
        android:paddingBottom="@dimen/bottom_padding"
        android:inputType="text"/>

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/tv"
        android:textStyle="bold"
        android:text="No Hp" />

    <EditText
        android:id="@+id/et4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/et"
        android:paddingBottom="@dimen/bottom_padding"
        android:inputType="number"/>

    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/tv"
        android:textStyle="bold"
        android:text="Tanggal Masuk" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:hint="Select Date..."
            android:paddingBottom="@dimen/bottom_padding"
            android:textSize="@dimen/et"
            android:enabled="false"
            android:paddingRight="150dp"/>
        <Button
            android:id="@+id/btndate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            app:srcCompat="@drawable/ic_add"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/tv"
        android:textStyle="bold"
        android:text="Unit" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:paddingBottom="@dimen/bottom_padding"
        android:layout_marginBottom="@dimen/padding"/>
</LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:onClick="simpan"
        android:text="Simpan"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        tools:ignore="OnClick" />
</RelativeLayout>